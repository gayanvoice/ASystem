@model ASystem.Models.View.UserViewModel.InsertViewModel
@{
    ViewData["Title"] = "Insert";
}

<div class="px-4 py-5" id="custom-cards">
    <h2 class="pb-2 border-bottom">Insert</h2>
    <div class="g-4 py-5">
        <div class="row g-5">
            <div class="col-md-7 col-lg-8">
                <form class="needs-validation" form method="post" asp-controller="User" asp-action="Insert">
                    <div class="row g-3 mb-2">
                        <div class="col-sm-12 mb-2">
                            <label asp-for="Form.Username" class="form-label"></label>
                            <input asp-for="Form.Username" class="form-control">
                            <span asp-validation-for="Form.Username" class="text-danger"></span>
                        </div>
                        <div class="col-sm-12 mb-2">
                            <label asp-for="Form.Password" class="form-label"></label>
                            <input asp-for="Form.Password" class="form-control">
                            <span asp-validation-for="Form.Password" class="text-danger"></span>
                        </div>
                        <div class="col-sm-12 mb-2">
                            <label asp-for="Form.Status" class="form-label"></label>
                            <select asp-for="Form.Status" asp-items="@Model.StatusOption" class="form-control">
                                <option value="">Choose...</option>
                            </select>
                            <span asp-validation-for="Form.Status" class="text-danger"></span>
                        </div>
                    </div>
                    <hr class="my-4">
                    <div class="row g-3">
                        <div class="col-sm-6">
                            <a asp-controller="User" asp-action="Index" class="w-100 btn btn-secondary btn-lg">Back</a>
                        </div>
                        <div class="col-sm-6">
                            <button class="w-100 btn btn-primary btn-lg" type="submit">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
