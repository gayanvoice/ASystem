@using System.Reflection;
@using ASystem.Models.Procedure;
@model ASystem.Models.View.ScheduleCrewViewModel.ListViewModel
@{
    ViewData["Title"] = "List";
    string controller = "ScheduleCrew";
}
@section CSS
{
    <link href="https://getbootstrap.com/docs/5.0/examples/features/features.css" rel="stylesheet">
}
<div class="px-4 py-5" id="custom-cards">
    @if (!(Model.Status is null))
    {
        if (Model.Status.Equals("ErrorNoId"))
        {
            <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                <strong>Error</strong> Requested Schedule Crew Id does not exist!
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        if (Model.Status.Equals("SuccessEdit"))
        {
            <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                <strong>Success</strong> Schedule Crew is updated successfully!
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        if (Model.Status.Equals("SuccessInsert"))
        {
            <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                <strong>Success</strong> Schedule Crew is inserted successfully!
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>

        }
        if (Model.Status.Equals("SuccessDelete"))
        {
            <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                <strong>Success</strong> Schedule Crew is deleted successfully!
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>

        }
        if (Model.Status.Equals("ErrorConstraint"))
        {
            <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                <strong>Error</strong> Can not delete Schedule Crew due to foriegn key constraint
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>

        }
    }
    <h2 class="pb-2 border-bottom"><a asp-controller="@controller" asp-action="Index" class="text-decoration-none">@controller</a> / List</h2>

    <div class="g-4 py-5">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        @{
                            foreach (PropertyInfo propertyInfo in Model.ScheduleCrewProcedureModelEnumerable
                                .First().GetType().GetProperties())
                            {
                                <th scope="col">@propertyInfo.Name</th>
                            }
                            <th scope="col">Config</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (ScheduleCrewProcedureModel contextModel in Model.ScheduleCrewProcedureModelEnumerable)
                        {
                            string id = contextModel.ScheduleCrewId;
                                        <tr>
                                            @foreach (PropertyInfo propertyInfo in contextModel.GetType().GetProperties())
                                            {
                                                <td>@propertyInfo.GetValue(contextModel, null)</td>

                                            }
                                            <td>

                                                <a asp-controller="@controller"
                                                   asp-action="Show"
                                                   asp-route-Id="@id"
                                                   class="text-decoration-none p-1">Show</a>
                                                <a asp-controller="@controller"
                                                   asp-action="Edit"
                                                   asp-route-Id="@id"
                                                   class="text-decoration-none p-1">Edit</a>
                                                <a asp-controller="@controller"
                                                   asp-action="Delete"
                                                   asp-route-Id="@id"
                                                   class="text-decoration-none p-1">Delete</a>
                                            </td>
                                        </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>