@model ASystem.Models.View.PassengerViewModel.EditViewModel
@{
    ViewData["Title"] = "Edit";
    string controller = "Passenger";
}
@section CSS {

    <link href="https://getbootstrap.com/docs/5.0/examples/features/features.css" rel="stylesheet">
}
<div class="px-4 py-5" id="custom-cards">
    <h2 class="pb-2 border-bottom">Edit</h2>
    <div class="g-4 py-5">
        <div class="row g-5">
            <div class="col-md-7 col-lg-8">
                <form class="needs-validation" form method="post" asp-controller="@controller" asp-action="Edit">
                    <div class="row g-3">
                        <div class="col-sm-12 mb-2">
                            <label asp-for="Form.PassengerId" class="form-label"></label>
                            <input asp-for="Form.PassengerId" class="form-control" readonly>
                            <span asp-validation-for="Form.PassengerId" class="text-danger"></span>
                        </div>
                        <div class="col-sm-12 mb-2">
                            <label asp-for="Form.PassportId" class="form-label"></label>
                            <select asp-for="Form.PassportId" asp-items="@Model.PassportEnumerable" class="form-control"></select>
                            <span asp-validation-for="Form.PassportId" class="text-danger"></span>
                        </div>
                        <div class="col-sm-12 mb-2">
                            <label asp-for="Form.Phone" class="form-label"></label>
                            <input asp-for="Form.Phone" class="form-control">
                            <span asp-validation-for="Form.Phone" class="text-danger"></span>
                        </div>
                    </div>
                    <hr class="my-4">
                    <div class="row g-3">
                        <div class="col-sm-6">
                            <a asp-controller="@controller" asp-action="List" class="w-100 btn btn-secondary btn-lg">Back</a>
                        </div>
                        <div class="col-sm-6">
                            <button class="w-100 btn btn-primary btn-lg" type="submit">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>