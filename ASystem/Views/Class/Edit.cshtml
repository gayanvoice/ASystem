@model ASystem.Models.View.ClassViewModel.EditViewModel
@{
    ViewData["Title"] = "Edit";
    string controller = "Class";
}
@section CSS {

    <link href="https://getbootstrap.com/docs/5.0/examples/features/features.css" rel="stylesheet">
}
<div class="px-4 py-5" id="custom-cards">
    <h2 class="pb-2 border-bottom">Edit</h2>
    <div class="g-4 py-5">
        <div class="row g-5">
            <div class="col-md-7 col-lg-8">
                <form class="needs-validation" form method="post" asp-controller="@controller" asp-action="Edit">
                    <div class="row g-3">
                        <div class="col-sm-12 mb-2">
                            <label asp-for="Form.ClassId" class="form-label"></label>
                            <input asp-for="Form.ClassId" class="form-control" readonly>
                            <span asp-validation-for="Form.ClassId" class="text-danger"></span>
                        </div>
                        <div class="col-sm-12 mb-2">
                            <label asp-for="Form.AirplaneId" class="form-label"></label>
                            <select asp-for="Form.AirplaneId" asp-items="@Model.AirplaneIdEnumerable" class="form-control"></select>
                            <span asp-validation-for="Form.AirplaneId" class="text-danger"></span>
                        </div>
                        <div class="col-sm-12 mb-2">
                            <label asp-for="Form.Name" class="form-label"></label>
                            <input asp-for="Form.Name" class="form-control">
                            <span asp-validation-for="Form.Name" class="text-danger"></span>
                        </div>
                        <div class="col-sm-12 mb-2">
                            <label asp-for="Form.SubClass" class="form-label"></label>
                            <input asp-for="Form.SubClass" class="form-control">
                            <span asp-validation-for="Form.SubClass" class="text-danger"></span>
                        </div>
                        <div class="col-sm-12 mb-2">
                            <label asp-for="Form.NoOfSeats" class="form-label"></label>
                            <input asp-for="Form.NoOfSeats" class="form-control">
                            <span asp-validation-for="Form.NoOfSeats" class="text-danger"></span>
                        </div>
                        <div class="col-sm-12 mb-2">
                            <label asp-for="Form.BaggageSize" class="form-label"></label>
                            <input asp-for="Form.BaggageSize" class="form-control">
                            <span asp-validation-for="Form.BaggageSize" class="text-danger"></span>
                        </div>
                        <div class="col-sm-12 mb-2">
                            <label asp-for="Form.CabinBaggageSize" class="form-label"></label>
                            <input asp-for="Form.CabinBaggageSize" class="form-control">
                            <span asp-validation-for="Form.CabinBaggageSize" class="text-danger"></span>
                        </div>
                        <div class="col-sm-12 mb-2">
                            <label asp-for="Form.IsSeatSelection" class="form-label"></label>
                            <select asp-for="Form.IsSeatSelection" asp-items="@Model.SeatSelectionEnumerable" class="form-control"></select>
                            <span asp-validation-for="Form.IsSeatSelection" class="text-danger"></span>
                        </div>
                        <div class="col-sm-12 mb-2">
                            <label asp-for="Form.IsSkywardsMiles" class="form-label"></label>
                            <select asp-for="Form.IsSkywardsMiles" asp-items="@Model.SkywardMilesEnumerable" class="form-control"></select>
                            <span asp-validation-for="Form.IsSkywardsMiles" class="text-danger"></span>
                        </div>
                        <div class="col-sm-12 mb-2">
                            <label asp-for="Form.IsUpgrade" class="form-label"></label>
                            <select asp-for="Form.IsUpgrade" asp-items="@Model.UpgradeEnumerable" class="form-control"></select>
                            <span asp-validation-for="Form.IsUpgrade" class="text-danger"></span>
                        </div>
                        <div class="col-sm-12 mb-2">
                            <label asp-for="Form.IsChangeFee" class="form-label"></label>
                            <select asp-for="Form.IsChangeFee" asp-items="@Model.ChangeFeeEnumerable" class="form-control"></select>
                            <span asp-validation-for="Form.IsChangeFee" class="text-danger"></span>
                        </div>
                        <div class="col-sm-12 mb-2">
                            <label asp-for="Form.IsRefundFee" class="form-label"></label>
                            <select asp-for="Form.IsRefundFee" asp-items="@Model.RefundFeeEnumerable" class="form-control"></select>
                            <span asp-validation-for="Form.IsRefundFee" class="text-danger"></span>
                        </div>
                    </div>
                    <hr class="my-4">
                    <div class="row g-3">
                        <div class="col-sm-6">
                            <a asp-controller="@controller" asp-action="List" class="w-100 btn btn-secondary btn-lg">Back</a>
                        </div>
                        <div class="col-sm-6">
                            <button class="w-100 btn btn-primary btn-lg" type="submit">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>